@model Articles.Models.BlogViewModels.CustomizeViewModel

@{
    ViewData["Title"] = "Customize";
}

<h2>Customize</h2>

<form asp-action="Customize">
    <div class="form-horizontal">
        <h4>Customize Your Feeds</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
      <p> <b>Custom Feed (filter by category)</b></p>
        @foreach (var key in Model.categories.Keys)
            {
            <div class="form-group">
              
               
                    
                       
                    
                 
                        <input asp-for="categories[key]" class="form-control" />
                        <label asp-for="categories[key]"> @Model.category_names[key] @Model.category_counts[key]</label>
                

            </div>
        } 

        <p><b>Subscribed Feed (filter by author)</b></p>
        @foreach(var key in Model.subscribed_authors.Keys)
        {
            <div class="form-group">

                <input asp-for="subscribed_authors[key]" class="form-control" />
                <label asp-for="subscribed_authors[key]">@key</label>

            </div>

        }
        <div class="form-group">
            <input asp-for="user_page_size" type="number" />
            <label asp-for="user_page_size">Posts per page</label>
        </div>
        
         <div class="form-group">
           
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="CustomPosts" asp-controller="Blog">Back to your custom feed</a>
</div>

