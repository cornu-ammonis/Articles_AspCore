<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
    <script src="@Url.Content("~/Scripts/app.js")"></script>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css"
          href="@Url.Content("~/lib/bootstrap/dist/css/themes/simple/style.css")" />

    
</head>

<body>
    <div id="main">

        <!-- Header -->
        <div id="header">
            <div id="logo">
                <div id="logo_text">
                    <h1><a href="/">Demo<span class="logo_colour">Blog</span></a></h1>
                    <h2>description here</h2>
                </div>
            </div>

            <div id="login-div">
                @Html.Partial("_LoginPartial")
            </div>
            <!-- Navigation -->
            <div id="menubar">
                <ul id="menu">
                    <li>@Html.ActionLink("Posts", "Posts", new {controller = "Blog" })</li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">About Me</a></li>
                   
                   
                </ul>
               
                

            </div>

            

            <div id="breadcrumbs">
               
            </div>

        </div>

        <!-- Site Content -->
        <div id="site_content">
            
            @Html.Partial("_Search")
            @RenderBody()

            <!--calls a 'child action' which creates a widget view model and returns the sidebar partial view given the model-->
           
            @await Component.InvokeAsync("Sidebar")
             
        </div>

        <!-- Footer -->
        <div id="footer">
            @DateTime.Now.Year 
        </div>
    </div>
</body>
</html>

@RenderSection("scripts", required: false)