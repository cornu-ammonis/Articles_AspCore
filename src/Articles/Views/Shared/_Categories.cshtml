@model IList<Articles.Models.Category>

<div class="sidebar">
    <h3>Categories</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li><a asp-action="Category" asp-controller="Blog" asp-route-category=@category.UrlSlug>@category.Name</a></li>
            }
        </ul>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>

