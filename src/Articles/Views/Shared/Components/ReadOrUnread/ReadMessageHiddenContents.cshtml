@model Articles.Models.Core.Message
<div id=@Model.MessageDivId()>
    <div><b>sent by:</b> @Model.Sender.user_name <b>sent on:</b> @Model.SentTime @await Component.InvokeAsync("MarkAsReadOrUnreadButton", Model.MessageId) </div>

    <div>
        <b>subject:</b> @Model.Subject <a asp-action="MessagesBetweenUsers" asp-controller="Blog" asp-route-user_name=@Model.Sender.user_name asp-route-user_name2=@Model.Recipient.user_name> View Conversation</a>
    </div>
    <div><a asp-action="ReadMessageViewMore" asp-controller="Blog" asp-route-messageId=@Model.MessageId data-ajax="true" data-ajax-mode="replace-with" data-ajax-update="#@Model.MessageDivId()">[+]</a>See Contents</div>

</div>